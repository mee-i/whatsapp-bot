{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "bun --hot run index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "pm2 start \"bun --hot run start\" --name bot",
    "stop": "pm2 stop bot",
    "restart": "pm2 restart bot",
    "logs": "pm2 logs bot",
    "update": "git pull && bun install && pm2 restart bot",
    "update:dev": "git pull && bun install && bun run start",
    "build": "bun build index.js --outdir=dist",
    "compile": "bun build index.js --compile --outfile=bot",
    "auth:reset": "sudo mysql -u root -e \"DELETE FROM bot.auth\"",
    "db:update": "drizzle-kit generate && drizzle-kit migrate",
    "db:migrate": "drizzle-kit migrate"
  },
  "type": "commonjs",
  "author": "Mee-I",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.11.0",
    "baileys": "^6.7.18",
    "canvas": "^3.2.0",
    "chalk": "^5.6.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.4",
    "figlet": "^1.8.2",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "link-preview-js": "^3.1.0",
    "mysql-baileys": "^1.5.3",
    "mysql2": "^3.14.3",
    "node-cache": "^5.1.2",
    "playwright": "^1.55.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "systeminformation": "^5.27.7",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2",
    "youtube-dl-exec": "^3.0.24"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  }
}