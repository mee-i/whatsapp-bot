{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "bun run index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "pm2 start \"bun run start\" --name bot",
    "stop": "pm2 stop bot",
    "restart": "pm2 restart bot",
    "logs": "pm2 logs bot",
    "update": "git pull && bun install && pm2 restart bot",
    "update:local": "git pull && bun install && bun run start",
    "build": "bun build index.js --outdir=dist",
    "compile": "bun build index.js --compile --outfile=bot",
    "auth:reset": "sudo mysql -u root -e \"DELETE FROM bot.auth\""
  },
  "type": "commonjs",
  "author": "Mee-I",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
