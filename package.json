    "chalk": "^5.4.1",
    "dotenv": "^16.5.0",
    "figlet": "^1.8.1",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "link-preview-js": "^3.0.15",
    "mysql-baileys": "^1.5.1",
    "node-cache": "^5.1.2",
    "playwright": "^1.52.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "systeminformation": "^5.25.11",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2",
    "youtube-dl-exec": "^3.0.21"
  },
