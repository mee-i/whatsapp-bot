{
    "name": "whatsapp-bot",
    "version": "2.0.0-rc1",
    "main": "index.ts",
    "scripts": {
        "start": "bun --hot run index.ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "deploy": "pm2 start \"bun --hot run start\" --name bot",
        "stop": "pm2 stop bot",
        "restart": "pm2 restart bot",
        "logs": "pm2 logs bot",
        "update": "git pull && bun install && pm2 restart bot",
        "update:dev": "git pull && bun install && bun run start",
        "build": "bun build index.js --outdir=dist",
        "compile": "bun build index.js --compile --outfile=bot",
        "auth:reset": "sudo mysql -u root -e \"DELETE FROM bot.auth\"",
        "db:update": "drizzle-kit generate && drizzle-kit migrate",
        "db:migrate": "drizzle-kit migrate"
    },
    "type": "commonjs",
    "author": "Mee-I",
    "license": "MIT",
    "description": "",
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "axios": "^1.13.2",
        "baileys": "^7.0.0-rc.9",
        "canvas": "^3.2.0",
        "chalk": "^5.6.2",
        "cheerio": "^1.1.2",
        "dotenv": "^16.6.1",
        "drizzle-orm": "^0.44.7",
        "figlet": "^1.9.4",
        "fluent-ffmpeg": "^2.1.3",
        "jimp": "^1.6.0",
        "link-preview-js": "^3.2.0",
        "node-cache": "^5.1.2",
        "pg": "^8.13.1",
        "pino-pretty": "^13.1.3",
        "playwright": "^1.57.0",
        "qrcode": "^1.5.4",
        "sharp": "^0.33.5",
        "systeminformation": "^5.27.13",
        "uuid": "^11.1.0",
        "xml2js": "^0.6.2",
        "youtube-dl-exec": "^3.0.27"
    },
    "devDependencies": {
        "@types/bun": "^1.3.4",
        "drizzle-kit": "^0.31.8",
        "tsx": "^4.21.0"
    },
    "peerDependencies": {
        "typescript": "^5.7.2"
    },
    "private": true
}
